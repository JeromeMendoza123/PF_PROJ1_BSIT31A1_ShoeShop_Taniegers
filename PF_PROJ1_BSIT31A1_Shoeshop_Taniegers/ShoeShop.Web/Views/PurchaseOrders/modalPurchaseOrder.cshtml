@{
    var modalId = ViewData["ModalId"]?.ToString() ?? "purchaseOrderModal";
    var modalTitle = ViewData["ModalTitle"]?.ToString() ?? "Add/Edit Purchase Order";
    var formId = ViewData["FormId"]?.ToString() ?? "purchaseOrderForm";
    var actionUrl = ViewData["ActionUrl"]?.ToString() ?? "#";
    var formContent = ViewData["FormContent"]?.ToString() ?? "";
    var submitButtonText = ViewData["SubmitButtonText"]?.ToString() ?? "Save";
}

<div class="modal fade" id="@modalId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">@modalTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="@formId" method="post" action="@actionUrl" enctype="multipart/form-data">
                <div class="modal-body">
                    @Html.Raw(formContent)
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitOrderForm()">@submitButtonText</button>
                </div>
            </form>
        </div>
    </div>
</div>
