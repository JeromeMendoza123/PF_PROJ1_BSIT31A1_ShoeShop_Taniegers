@model IEnumerable<ShoeShop.Services.DTOs.CartItemDto>
<h2>Shopping Cart</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Shoe</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Shoe.Name</td>
                <td>@item.Shoe.Brand</td>
                <td>₱@item.Shoe.Price</td>
                <td>@item.Quantity</td>
                <td>₱@item.Total</td>
                <td>
                    <form method="post" asp-action="RemoveFromCart">
                        <input type="hidden" name="id" value="@item.Shoe.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Total: ₱@Model.Sum(c => c.Total)</h4>
<a href="/" class="btn btn-success">Continue Shopping</a>
