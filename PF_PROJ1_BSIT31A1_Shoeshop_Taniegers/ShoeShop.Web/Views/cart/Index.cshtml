@model IEnumerable<ShoeShop.Services.DTOs.CartItemDto>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Shopping Cart</h2>

    <table id="cartTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Shoe</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Shoe?.Name ?? "N/A")</td>
                        <td>@(item.Shoe?.Brand ?? "N/A")</td>
                        <td>₱@(item.Shoe?.Price ?? 0m)</td>
                        <td>@item.Quantity</td>
                        <td>₱@((item.Shoe?.Price ?? 0m) * item.Quantity)</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="shoeId" value="@(item.Shoe?.Id ?? 0)" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Your cart is empty.</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>
        Total: ₱@(Model?.Sum(i => (i.Shoe?.Price ?? 0m) * i.Quantity) ?? 0m)
    </h4>
</div>

@await Html.PartialAsync("_Toast")

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#cartTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                columnDefs: [
                    { orderable: false, targets: 5 }
                ]
            });
        });

        function showToast(message, type = "SuccessMessage") {
            const bgClass = type === "SuccessMessage" ? "bg-success" :
                            type === "ErrorMessage" ? "bg-danger" : "bg-info";

            const toastId = `toast-${Date.now()}`;
            const toastHtml = `
                <div id="${toastId}" class="toast align-items-center text-white ${bgClass} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">${message}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>`;
            const container = document.getElementById("toastContainer");
            container.insertAdjacentHTML("beforeend", toastHtml);
            const toastElement = document.getElementById(toastId);
            new bootstrap.Toast(toastElement, { delay: 3000 }).show();
        }
    </script>
}
